---
import type { ProjectCaseStudy } from "../data/cv";

type Props = {
  projects: readonly ProjectCaseStudy[];
};

const { projects } = Astro.props as Props;
---

<section id="work" class="scroll-mt-20 mt-14 reveal" style="--delay: 200ms;">
  <h2 class="section-title">selected work</h2>
  <div class="space-y-5">
    {
      projects.map((project) => (
        <article class="border border-border p-4">
          <p class="mb-2 text-[0.72rem] uppercase tracking-[0.12em] opacity-55">{project.label}</p>
          <h3 class="text-[0.95rem] font-medium text-accent">{project.name}</h3>
          <p class="mt-3 text-[0.85rem] leading-7 opacity-60">{project.summary}</p>

          <div class="mt-5 flex flex-wrap gap-2 text-[0.75rem]">
            {
              project.stack.map((item) => (
                <span class="border border-border px-2 py-1 opacity-75">
                  {item}
                </span>
              ))
            }
          </div>

          <ul class="mt-5 space-y-2 text-[0.85rem] leading-7 opacity-60">
            {
              project.outcomes.map((outcome) => (
                <li class="flex gap-3">
                  <span class="text-accent" aria-hidden="true">-</span>
                  <span>{outcome}</span>
                </li>
              ))
            }
          </ul>
        </article>
      ))
    }
  </div>
</section>
