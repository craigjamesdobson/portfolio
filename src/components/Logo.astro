---
type Props = {
  size?: "sm" | "md";
};

const { size = "md" } = Astro.props as Props;

const config = size === "sm"
  ? { width: 48, height: 20, strokeWidth: 1.8 }
  : { width: 58, height: 24, strokeWidth: 2 };
---

<svg
  class="inline-block"
  width={config.width}
  height={config.height}
  viewBox="-1 0 42 24"
  role="img"
  aria-label="Craig Dobson"
>
  <title>Craig Dobson</title>
  <path
    d="M4 2H2V8H0V16H2V22H4"
    fill="none"
    stroke="currentColor"
    stroke-opacity="0.72"
    stroke-width={config.strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
  />
  <path
    d="M36 2H38V8H40V16H38V22H36"
    fill="none"
    stroke="currentColor"
    stroke-opacity="0.72"
    stroke-width={config.strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
  />
  <path
    d="M18 5H14C11 5 9 7.2 9 12C9 16.8 11 19 14 19H18"
    fill="none"
    stroke="var(--accent)"
    stroke-width={config.strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
  />
  <path
    d="M22 5V19H26C29.5 19 32 16.8 32 12C32 7.2 29.5 5 26 5H22"
    fill="none"
    stroke="var(--accent)"
    stroke-width={config.strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"
  />
</svg>
