---
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import ProjectSpotlight from "../components/ProjectSpotlight.astro";
import Skills from "../components/Skills.astro";
import { cvData } from "../data/cv";

const navItems = [
  { href: "#about", label: "about" },
  { href: "#experience", label: "experience" },
  { href: "#work", label: "work" },
  { href: "#skills", label: "skills" },
  { href: "#education", label: "education" },
  { href: "#contact", label: "contact" },
] as const;

const pageTitle = `${cvData.name} | ${cvData.title}`;
---

<Layout title={pageTitle} description={cvData.profile}>
  <Header navItems={navItems} contactLinks={cvData.contactLinks} />
  <main>
    <Hero
      name={cvData.name}
      title={cvData.title}
      location={cvData.location}
      contactLinks={cvData.contactLinks}
    />

    <Experience entries={cvData.experience} />
    <ProjectSpotlight projects={cvData.projectHighlights} />
    <Skills areas={cvData.technicalFocus} />
    <Education items={cvData.education} />
  </main>
  <Footer availability={cvData.availability} links={cvData.contactLinks} />
</Layout>
